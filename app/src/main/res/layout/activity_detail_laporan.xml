<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:title="Detail Laporan"
        app:titleTextColor="@color/colorWhite">

    </android.support.v7.widget.Toolbar>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_addPurpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="32dp"
        android:elevation="6dp"
        android:visibility="invisible"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:pressedTranslationZ="25dp"
        app:rippleColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/tv_addPurpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="Propose to close"
            android:textSize="14dp"
            android:visibility="invisible"
            android:background="#aeffffff"
            android:layout_marginRight="132dp"
            android:layout_marginBottom="16dp"
            android:elevation="16dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_addApprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="32dp"
        android:elevation="6dp"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:pressedTranslationZ="15dp"
        android:visibility="invisible"
        app:rippleColor="@color/colorPrimary"/>
    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_addApprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:text="Add Approve"
        android:textSize="14dp"
        android:background="#aeffffff"
        android:layout_marginRight="65dp"
        android:layout_marginBottom="16dp"
        android:elevation="16dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_addClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="32dp"
        android:elevation="6dp"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:pressedTranslationZ="15dp"
        android:visibility="invisible"
        app:rippleColor="@color/colorPrimary"/>
    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_addClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:text="Close IOR"
        android:textSize="14dp"
        android:background="#aeffffff"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="16dp"
        android:elevation="16dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_addProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="32dp"
        android:elevation="6dp"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:pressedTranslationZ="15dp"
        android:visibility="invisible"
        app:rippleColor="@color/colorPrimary"/>
    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_addProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:text="Progress"
        android:textSize="14dp"
        android:background="#aeffffff"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="16dp"
        android:elevation="16dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_addFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="32dp"
        android:elevation="6dp"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:pressedTranslationZ="15dp"
        android:visibility="invisible"
        app:rippleColor="@color/colorPrimary"/>
    <TextView
        android:visibility="invisible"

        android:id="@+id/tv_addFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:text="Add Follow"
        android:textSize="14dp"
        android:background="#aeffffff"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="16dp"
        android:elevation="16dp"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        app:backgroundTint="@color/colorPrimary"
        app:rippleColor="@color/colorPrimary"
        android:src="@drawable/ic_arrow_left"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_laporan"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />

                <!--<TextView-->
                    <!--android:id="@+id/tv_stat"-->
                    <!--android:gravity="center"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_gravity="right"-->
                    <!--android:background="@drawable/rect_blue"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:layout_marginBottom="10dp"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:paddingTop="5dp"-->
                    <!--android:paddingBottom="5dp"-->
                    <!--android:paddingLeft="15dp"-->
                    <!--android:paddingRight="15dp"-->
                    <!--android:textStyle="bold"-->
                    <!--android:textSize="15sp"-->
                    <!--android:textColor="@color/colorWhite"-->
                    <!--android:text="Waiting"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->

                <LinearLayout
                    android:id="@+id/btn_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/iv_laporan"
                    android:layout_alignRight="@+id/iv_laporan"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/rect_yellow"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_stat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:text="Progress"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/wrap_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3F51B5"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:text="IOR. Number : "
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/tv_number_ior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_reguler"
                        android:text="53/99/2019"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_title_ior"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/opensans_bold"
                    android:lines="2"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />

            </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Send. To : "/>

                        <TextView
                            android:id="@+id/tv_sendTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_reguler"
                            tools:text="TBH" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/opensans_bold"
                            android:maxLines="1"
                            android:text="Reff : "/>

                        <TextView
                            android:id="@+id/tv_reff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_reguler"
                            android:maxLines="2"
                            tools:text="Manual HSE dan HSE-4-03 Pengelolaan limbah B3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Category : " />

                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_reguler"
                            tools:text="Individual Factor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Sub Category : "
                            android:textColor="#3F51B5"/>

                        <TextView
                            android:id="@+id/tv_sub_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_reguler"
                            android:textColor="#3F51B5"
                            android:layout_weight="1"
                            tools:text="Situation Awareness" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Risk. Index : "
                            android:textColor="#3F51B5"/>

                        <TextView
                            android:id="@+id/tv_risk_index"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_reguler"
                            android:textColor="#3F51B5"
                            tools:text="3C" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Reported. By : "/>

                        <TextView
                            android:id="@+id/tv_reporter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/opensans_reguler"
                            android:maxLines="1"
                            android:layout_weight="1"

                            tools:text="Masagus Halim Taufik" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/text8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Est. Finish : " />

                        <TextView
                            android:id="@+id/tv_est_finish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_reguler"
                            tools:text="30 April 2019" />
                    </LinearLayout>

                </LinearLayout>














            <LinearLayout
                android:id="@+id/wrap_title_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#19000000"
                android:fontFamily="@font/opensans_bold"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Description"
                    android:textColor="#3F51B5"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/wrap_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="23dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wrap_title_desc">

                <ImageView
                    android:id="@+id/iv_reporter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_account_circle_primary_24dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Insert. By : "
                    app:layout_constraintBottom_toTopOf="@id/tv_insertBy"
                    app:layout_constraintLeft_toRightOf="@id/iv_reporter"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_insertBy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/opensans_bold"
                    android:maxLines="1"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="@id/iv_reporter"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toRightOf="@id/iv_reporter"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="582207/Masagus Halim Taufik/TUK-1" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/opensans_reguler"
                    android:textColor="#3F51B5"
                    android:layout_marginBottom="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_reporter"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." />
            </android.support.constraint.ConstraintLayout>






        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>